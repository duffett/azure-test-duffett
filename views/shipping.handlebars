<div class="invoice-box">
    <table cellpadding="0" cellspacing="0">
        <tr class="top">
            <td colspan="6">
                <table>
                    <tr>
                        <td class="title">
                            <img src="http://www.iwminc.com/images/logo_med.gif" style="width:100%; max-width:300px;">
</td>
<td colspan="3">
    <h2>Shipping Document</h2>
    <strong>Invoice Number: </strong>{{{invoice.DocNumber}}}<br><strong>Invoice Date:</strong> {{{date invoice.TxnDate}}}
</td>
</tr>
</table>
</td>
</tr>
<tr class="information">
    <td colspan="6">
        <table>
            <tr>
                <td>
                    Integrated Water Management, Inc.<br> 289 Cortland Road<br> Dryden, NY 14850
                </td>
                <td>
                </td>
            </tr>
        </table>
    </td>
</tr>
<tr class="information">
    <td colspan="6">
        <table>
            <tr>
                <td>
                    <div><strong>Bill To</strong></div>
                    <div>{{{invoice.CustomerRef.name}}} </div>
                    <div>{{{invoice.BillAddr.Line1}}}</div>
                    <div>{{{invoice.BillAddr.City}}}, {{{invoice.BillAddr.CountrySubDivisionCode}}} {{{invoice.BillAddr.PostalCode}}}
                    </div>
                </td>
                <td>
                    <div><strong>Ship To</strong></div>
                    <div>{{{invoice.CustomerRef.name}}} </div>
                    <div>{{{invoice.ShipAddr.Line1}}}</div>
                    <div>{{{invoice.ShipAddr.City}}}, {{{invoice.ShipAddr.CountrySubDivisionCode}}} {{{invoice.ShipAddr.PostalCode}}}
                    </div>
                </td>
            </tr>
        </table>
    </td>
</tr>

<tr class="heading">
    <td nowrap>P.O. Number </td>
    <td nowrap>Terms</td>
    <td nowrap>Rep</td>
    <td nowrap>Ship Date</td>
    <td nowrap>Ship Via</td>
    <td nowrap>F.O.B</td>
</tr>

<tr class="details">
    <td>
        {{{invoice.CustomField.[0].StringValue}}}
    </td>
    <td>
        Net 30*
    </td>
    <td>
        {{{invoice.CustomField.[2].StringValue}}}
    </td>
    <td>
        {{{date invoice.ShipDate}}}
    </td>

    <td>
        {{{invoice.ShipMethodRef.name}}}
    </td>

    <td nowrap>
        {{{invoice.CustomField.[1].StringValue}}}
    </td>
</tr>
<tr class="heading">
    <td nowrap>
        Quantity
    </td>
    <td>
        Item Code
    </td>
    <td colspan="3">Description</td>
    <td>HM</td>
</tr>

{{#each invoice.Line}} {{#if_eq DetailType 'SalesItemLineDetail'}}
<tr class="details">
    <td width="10%">
        {{{SalesItemLineDetail.Qty}}}
    </td>

    <td width="20%">
        {{{removeParent SalesItemLineDetail.ItemRef.name}}}
    </td>
    <td colspan="3" width="300">
        {{{json Description}}}</td>
    <td width="10%">{{{isHazardous Description}}}</td>
</tr>
{{/if_eq}} {{/each}}
<tr class="total">
    <td colspan="4"><strong>CHEMTEL EMERGENCY # 1-800-255-3924<br> CONTRACT # MIS0002783<strong></td>
    <td colspan="2">{{{invoice.Line.length}}} Items</td>
</tr>
</table>
</div>

